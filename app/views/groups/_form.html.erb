    <%= form.label :crew, style: "display: block" %>
    <%= form.number_field :crew %>
  </div>

  <div>
        <%= form.label :groups %>
        <%= form.select :group_id, options_from_collection_for_select(@groups, :id, :name) %>
  </div>


  <div>
    <%= form.label :debut_date, style: "display: block" %>
    <%= form.text_field :debut_date %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.text_field :date %>
  </div>

  <div>
    <%= form.label :group_type, style: "display: block" %>
    <%= form.text_field :group_type %>
  </div>

  <div>
    <%= form.label :integer, style: "display: block" %>
    <%= form.text_field :integer %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
